@page
@model G1_ee_groep1_palamedes.SH_MVL.Web.Areas.Identity.Pages.Portofolio.PortfolioModel
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@{
    string name = Model.Name;
}


@{ ViewBag.Title = "My portofolio with Vue.js"; }

<div class="col-lg-10 col-md-9 col-12 body_block  align-content-center">


    <main role="main" class="pb-3">
        <!--=================== put content if needed====================-->
        <h1>@ViewBag.Title</h1>
        <!--=================== put content if needed====================-->
        <h1>@name</h1>
    </main>


    <div class="portfolio">
        <div class="container-fluid">
            <article id="app" class="row">
                <header class="col-md-4">
                    <h3>{{ message }}</h3>
                    @*Vue mustache*@
                    <nav>
                        <ul class="list-group">
                            <li class="list-group-item" v-for="art in arts">
                                <span class="name">{{ art.name }}</span>
                            </li>
                        </ul>
                    </nav>
                </header>
            </article>
        </div>

    </div>


    <script src="~/lib/vue/vue.js"></script>
    <script>
        var apiURL = 'http://localhost:5000/arts/';

        var app = new Vue({
            el: '#app', data:
            {
                message: 'Loading art...', arts: null,
            }, created: function () {
                var self = this; self.fetchArts();
            }, methods: {
                fetchArts: function () {
                    self = this;
                    fetch(`${apiURL}`).then(res => res.json()).then(function (arts) {
                        self.arts = arts;
                        self.message = 'Overview';
                    }).catch(err => console.error('Fout: ' + err));
                },
            }
        });</script>
